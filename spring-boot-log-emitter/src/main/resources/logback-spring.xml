<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/app/logs/app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
